#!/bin/bash

# Copy all the stuff to a git repo. 
# TODO: Find a better way to do this.
cp ~/.bashrc ~/.dotfiles/dot/
cp ~/.bash_aliases ~/.dotfiles/dot/

if [ -d ~/.w3m/ ] then
cp -r ~/.w3m ~/.dotfiles/dot/
fi

if [ -d ~/.local/bin/ ] then
cp -r ~/.local/bin ~/.dotfiles/dot/
fi

if [ -f ~/.vimrc ] then
    cp ~/.vimrc ~/.dotfiles/dot/
fi

if [ -f ~/.tmux.conf ] then 
cp ~/.tmux.conf ~/.dotfiles/dot/
fi

if [ -f ~/.env ] then
    cp ~/.env ~/.dotfiles/dot/
fi

